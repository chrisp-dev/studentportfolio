{{> header}}
<div class="container flex justify-center mx-auto flex-grow">
    <div class="bg-img"></div>
    <div class="w-full flex-row py-4">
        <div class="mx-auto max-w-md">
            <h2 class="text-bold text-2xl text-gray-300">Contact</h2>
            <hr>
            <form id="contactForm" class="w-full m-2 p-4 bg-c-thru shadow-md rounded px-8 pt-6 pb-8 mb-4">
                <div class="mb-4">
                    <label class="block text-gray-300 text-sm font-bold" for="name">Name</label>
                    <input type="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 
                        leading-tight focus:outline-none focus:shadow-outline" name="name" id="name">
                </div>
                <div class="mb-4">
                    <label class="block text-gray-300 text-sm font-bold" for="phone">Phone Number</label>
                    <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 
                        leading-tight focus:outline-none focus:shadow-outline" name="phone" id="phone">
                </div>
                <div class="mb-3">
                    <label class="block text-gray-300 text-sm font-bold" for="message">Message</label>
                    <textarea rows="3" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 
                        leading-tight focus:outline-none focus:shadow-outline" name="message" id="message"
                        placeholder="Hi, I need help with..."></textarea>
                </div>
                <div class="mb-3 form-check">
                    <input class="text-gray-300 text-sm font-bold" type="checkbox" class="form-check-input" id="callMe">
                    <label class=" text-gray-300" for="callMe">Call to schedule an appointment</label>
                </div>
                <button type="submit"
                    class="bg-white hover:bg-blue-500 hover:text-white text-black font-bold py-2 px-4 rounded">Submit</button>
            </form>
        </div>
    </div>
    {{!-- using jquery form plugin to capture form submit --}}
    <script src="http://malsup.github.com/jquery.form.js"></script>
    <script>
        $(document).ready(function () {
            $('#contactForm').on('submit', function () {
                event.preventDefault();
                let formData = {
                    name: $("#name").val().trim(),
                    phone: $("#phone").val().trim(),
                    message: $("#message").val().trim(),
                    callMe: $("#callMe").val().trim()
                }
                $.ajax({
                    url: '/api/contact',
                    data: formData
                }).then(response => {
                    alert(response);
                    location.href = "/contact";
                });
            });
        });
    </script>
</div>
{{> footer}}